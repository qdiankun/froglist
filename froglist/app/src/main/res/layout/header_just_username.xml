<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="?attr/colorPrimary"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:src="@drawable/settings_index_icon_normal"
        android:layout_alignParentRight="true"/>


    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:src="@drawable/ic_search"
        android:layout_marginRight="30dip"
        android:layout_toLeftOf="@id/iv_setting"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        android:id="@+id/ll_login_register"
        android:gravity="center"
        android:background="#B7C4F0"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录或注册" />
    </LinearLayout>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@id/ll_login_register"
        android:src="@drawable/default_photo_light"/>

</RelativeLayout>