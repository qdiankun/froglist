<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_tick"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:background="@color/white"
    android:gravity="center|left"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_line"
        android:layout_width="2.5dip"
        android:layout_height="match_parent"
        android:background="@color/red" />

    <ImageView
        android:id="@+id/iv_tick_check"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dip"
        android:background="@drawable/btn_check_buttonless_off_dark_widget_widget" />

    <TextView
        android:id="@+id/tv_tick_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dip"
        android:text="Welcome to CHina sfsfsf"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

</LinearLayout>